<!--Homepage-->
<div class="container">
<div class="jumbotron text-center">
          <div class="jumbo-text">
              <h1>TIDBITS</h1>
              <h2>Catching the tech news you may have missed!</h2>
              <h3>(Courtesy of the New York Times Technology)</h3>
        </div>
      </div>



    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="panel panel-info panel-default">
                <div class="panel-heading panel-heading-custom">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="panel-body panel-default">
                    <p> {{this.summary}}</p>
                    <a href={{this.link}} target="_blank">{{this.link}}</a>
                    <br><br>
                    <button type="button" class="btn btn-success save btn-save-custom" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="panel panel-danger">
            <div class="panel-body">
            <h4>There are no scraped articles at this time.</h4>
            <h5>You can try scraping for new articles by selecting the "Scrape New Articles" button on the navigation bar.</h5>
            </div>
         </div>
        {{/if}}
    </div>
</div>
